{{>partials/header}}

<body>
    <header>
        <section class=cabecalho>
            <img class="button" src="_images/back.png" alt="Logo não disponível no momento">
            <h1>Projetos</h1>
            <img class="button" src="_images/adicionar.png" alt="Logo não disponível no momento">
        </section>
        <section class="subtitulo">
            <h2>Meu local de origem</h2>
        </section>

        {{#listMeuLocal}}
            <section class="itens">
                <img class="item-img" src="_images/{{imagemProjeto}}" alt="imagem não encontrada">
                <h3>{{tituloProjeto}}</h3>
            </section>
        {{/listMeuLocal}}
        <section class="subtitulo">
            <h2>Outros locais</h2>
        </section>
        <section>
            <label for="outroLocal" class="form-label">Escolha o local desejado</label>
            <input class="form-control" list="outrosLocais" name="outroLocal" id="outroLocal">
            <datalist id="outrosLocais">
                <option value="Belo Horizonte">
                <option value="Campinas">
                <option value="Jundiaí">
                <option value="Rio de Janeiro">
                <option value="São Paulo">
            </datalist>
        </section>

        {{#listOutrosLocais}}
            <section class="itens">
                <img class="item-img" src="_images/{{imagemProjeto}}" alt="imagem não encontrada">
                <h3>{{tituloProjeto}}</h3>
            </section>      
        {{/listOutrosLocais}}

</body>

</html>
